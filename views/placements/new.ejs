<%layout('layout/boilerplate') %> 

<div class="row" >

    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
        <div class="card shadow">
            <div class="card-body">
                <div class="card-title"> <h3>Add a new company</h3> </div>
                <form action="/placement" method="POST" class="validated-form">
                    <div class="mb-3">
                       <label class="form-label" for="name">Name of the company: </label>
                       <input class="form-control" type="text" name="placement[name]" id="name"  required> 
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="ctc">CTC:</label>
                        <input class="form-control" type="text" name="placement[ctc]" id="ctc"  required> 
                     </div>

                     <div class="mb-3">
                        <label class="form-label" for="location">Location:</label>
                        <input class="form-control" type="text" name="placement[location]" id="location"  required> 
                     </div>

                     <div class="mb-3">
                        <label class="form-label" for="description">Description:</label>
                        <input class="form-control" type="text" name="placement[description]" id="description"  required> 
                     </div>

                     <div class="mb-3">
                        <label class="form-label" for="image">Image url:</label>
                        <input class="form-control" type="text" name="placement[image]" id="image"  required> 
                     </div>
                    <div class="d-grid gap-2 mb-3">
                        <button class="btn btn-outline-success">ADD</button>
                        <a class="btn btn-outline-danger" href="/placement">back</a>
                    </div>
                  
                </form>
            </div>
            
        </div>
    </div>

  